<br>
<%= link_to "Continuar comprando", root_path, class: 'btn btn-warning' %>

<%= link_to "Eliminar Carro", empty_cart_orders_path, class: 'btn btn-danger', method: :delete %>


<% if @orders.present? %>
	<table class="table table-hover">
		<tr>
			<th>
				Producto
			</th>
			<th>
				Valor Unitario
			</th>
			<th>
				Cantidad
			</th>
			<th>
				Subtotal
			</th>
			<th></th>
		</tr>
		<% @orders.each do |order| %>
		<tr>
			<td>
				<%= order.product.name %>
			</td>
			<td>
				<%= order.product.price %>
			</td>
			<td>
				<%= order.quantity %>
			</td>
			<td>
				<%= order.quantity * order.product.price %>
			</td>
			<td>
				<%= link_to  order_path(order),  class: 'btn btn-danger btn-sm', method: :delete do%>
				<i class="fas fa-trash-alt"></i>
				<% end %>
			</td>
		</tr>
		<% end %>

		<tr>
			<th>
				Total
			</th>
			<th>
				
			</th>
			<th>
				
			</th>
			<th>
				<%= @total%>
			</th>
			<th></th>
		</tr>
	</table>
<% else %>
	<h6>No hay nada en el carrito</h6>
<%end %>